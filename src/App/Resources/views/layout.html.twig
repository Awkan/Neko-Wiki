<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% stylesheets
        '@App/Resources/less/main.less'
        filter="less,?uglifycss"
        output="css/main.css"
    %}
        <link href="{{ asset_url }}" rel="stylesheet" />
    {% endstylesheets %}
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <ul>
                {% if is_granted('ROLE_USER') %}
                    <li><a href="{{ path('registration') }}">{% trans %}app.user.registration.register{% endtrans %}</a></li>
                    <li><a href="{{ path('login') }}">{% trans %}app.user.registration.login{% endtrans %}</a></li>
                    {% else %}
                    <li><a href="{{ path('profile') }}">{% trans %}app.user.profile.profile{% endtrans %}</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success" role="alert">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="alert alert-danger" role="alert">
                    {{ flashMessage }}
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="row">
        {% block body %}{% endblock %}
    </div>
</div>
{% javascripts
'../app/Resources/assets/jquery/dist/jquery.min.js'
'../app/Resources/assets/bootstrap/dist/js/bootstrap.min.js'
filter="?uglifyjs2"
output='js/main.js'
%}
    <script src="{{ asset_url }}" type="text/javascript"></script>
{% endjavascripts %}
{% block javascripts %}{% endblock %}
</body>
</html>
